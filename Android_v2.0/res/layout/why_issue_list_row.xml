<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/why_issue_list_layout_row_ex"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/why_issue_list_layout_row"
        android:layout_width="fill_parent"
        android:layout_height="53.3dip"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingLeft="10dip">

        <RelativeLayout
			android:id="@+id/photo_image_rect"
			android:layout_width="41dip"
			android:layout_height="41dip"
			android:layout_gravity="center_vertical" >
			
			<TextView
	            android:id="@+id/issue_rank"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:ellipsize="end"
	            android:maxLength="10"
	            android:maxLines="1"
	            android:paddingLeft="13.3dip"
	            android:paddingRight="12dip"
	            android:singleLine="true" />
			
        </RelativeLayout>
        
		<RelativeLayout
			android:id="@+id/photo_image_rect"
			android:layout_width="41dip"
			android:layout_height="41dip"
			android:layout_gravity="center_vertical" >
						<ImageView
			    android:id="@+id/issue_image"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_gravity="center"
			    android:layout_weight="0" />
			
        </RelativeLayout>             

        <RelativeLayout
            android:id="@+id/why_issue_list_text_rect"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true" >

                <TextView
                    android:id="@+id/issue_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="13.3dip"
                    android:paddingRight="12dip"
                    android:singleLine="true" />

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>